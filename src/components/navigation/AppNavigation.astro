---
import { NavbarContent } from "./NavbarContent";

interface Props {
  currentPath?: string;
}

const { currentPath } = Astro.props;

// Extract user email from session (set by middleware)
const user = Astro.locals.user;
const userEmail = user?.email;
---

<NavbarContent client:load userEmail={userEmail} currentPath={currentPath || Astro.url.pathname} />
