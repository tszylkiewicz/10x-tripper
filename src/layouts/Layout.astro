---
import "../styles/global.css";
import AppNavigation from "../components/navigation/AppNavigation.astro";

interface Props {
  title?: string;
  showNavigation?: boolean;
}

const { title = "Tripper", showNavigation = true } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showNavigation && <AppNavigation currentPath={Astro.url.pathname} />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
